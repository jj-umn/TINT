<tool id="pep2pro" version="0.1" name="pep2pro">
  <description></description>
  <command interpreter="python">pep2pro.py $sequences $output</command>
  <inputs>
    <param format="txt" name="sequences" type="data" label="Sequences" help="Plain text file containing peptide sequences to look up." />
  </inputs>
  <outputs>
    <data format="tabular" name="output" label="pep2pro for ${sequences.name}"/>
  </outputs>
  <help>
  </help>
  <tests>
    <test>
      <param name="sequences" value="pep2pro_seqs.txt"/>
      <output name="output" file="pep2pro_output" />      
    </test>
  </tests>
</tool>
